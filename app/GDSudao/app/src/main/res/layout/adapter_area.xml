<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#114063A0"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNomeArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="P20-talaho1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDataPlantio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Plantio: 10/10/2010" />

            <TextView
                android:id="@+id/tvDataPrevisao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Próximo Corte: 20/10/2020"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNumeroCortes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Número de cortes: 1" />

            <TextView
                android:id="@+id/tvProgresso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Progresso: 25%" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivIconeSudao"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/gdsudao_logo" />
    </LinearLayout>

</LinearLayout>